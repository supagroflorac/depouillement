{% include 'include/header.twig' %}

<h1>Modifier un utilisateur</h1>
<form method="post" action="./index.php?view=ListUsers&action=ModUser">
    Utilisateur : <input type="text" name="username" value="{{ user.name }}"/>
    <input type="hidden" name="userid" value="{{ user.id }}"/>
    <select name="groupid" size="1" value="{{ user.id_group }}">
        <option value="0">--sans groupe--</option>
        {% for group in groups %}
          <option value="{{ group.id }}"{% if group.id == user.id_group %}selected="selected"{% endif %}>{{ group.name }}</option>;
        {% endfor %}
    </select>
    <input type="submit" value="Modifier" />
</form>
